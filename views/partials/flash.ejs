<% if (flash && flash.status) { %>
<div class="row">
    <div class="alert alert-info alert-dismissible"
         role="alert">
        <button type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"><span aria-hidden="true">&times;</span></button><%= flash.message %></div>
</div><% } %>
<% if (flash && flash.error) { %>
<div class="row">
    <div class="alert alert-danger alert-dismissible"
         role="alert">
        <button type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= flash.title || 'Warning: ' %></strong><br/><%= flash.message %>
    </div>
</div><% } %>