<div style="margin-top: 60px">
    <div class="row"
         style="padding: 0;margin: 0">
        <div class="col-md-2 sidebar">
            <%- partial('sidebar.ejs') %>
        </div>
        <div class="col-md-10">
            <div style="margin-left: 50px;margin-right: 50px">
                <div class="row">
                    <h1 class="page-header">Edit User</h1>
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h1 class="panel-title">User</h1>
                        </div>
                        <div class="panel-body">
                            <form action="admin/update"
                                  method="POST">
                                <input type="hidden"
                                       name="client"
                                       value="dashboard">
                                <input type="hidden"
                                       name="id"
                                       value="<%= user.id %>">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="admin_name">Name</label>
                                            <input type="text"
                                                   name="name"
                                                   class="form-control"
                                                   id="admin_name"
                                                   placeholder="User Name"
                                                   value="<%= user.name %>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="admin_role">Role</label>
                                            <input type="text"
                                                   name="role"
                                                   class="form-control"
                                                   id="admin_role"
                                                   placeholder="Role"
                                                   value="<%= user.role %>">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="admin_email">Email</label>
                                            <input type="email"
                                                   name="email"
                                                   class="form-control"
                                                   id="admin_email"
                                                   placeholder="User E-mail"
                                                   value="<%= user.email %>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="admin_password">Password</label>
                                            <input type="password"
                                                   name="password"
                                                   class="form-control"
                                                   id="admin_password"
                                                   placeholder="Update user's Password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <button type="submit"
                                                    class="btn btn-success btn-lg btn-block">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>